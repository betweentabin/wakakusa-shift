# Django設定
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=wakakusa_shift.settings_production

# データベース設定
DB_NAME=wakakusa_shift
DB_USER=wakakusa_user
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# ドメイン設定（取得後に更新）
DOMAIN_NAME=your-domain.com

# SSL設定（ドメイン取得後に有効化）
USE_HTTPS=False

# メール設定（必要に応じて）
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# ホスト設定
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-subdomain.xsrv.jp

# Redis設定（オプション）
REDIS_URL=redis://localhost:6379/1

ADMIN_EMAIL=admin@yourdomain.com 